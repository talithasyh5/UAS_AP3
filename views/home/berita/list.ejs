<%- include ('../../partial/header'); -%>
<h1>List Berita</h1>
<div>
    <a href="/berita/tambah" class="btn btn-primary" style="margin: 10px;">Tambah Data</a>
</div>
<table class="table" id="warga">
<thead>
    <tr>
        <th>
            No
        </th>
        <th>
            Judul
        </th>
        <th>
            Waktu buat
        </th>
        <th>
            Aksi
        </th>

    </tr>
</thead>
<tbody>
    <% berita?.forEach((element, index) => { %>
        <tr>
            <td>
                <%= index+1 %> 
            </td>
            <td>
                <%= element.title %> 
            </td>
            <td>
                <%= element.created_at || "-" %> 
            </td>
            <td>
                <a href="/berita/edit/<%= element._id %> " class="btn btn-info">Edit</a>
                <a href="/berita/hapus/<%= element._id %> " class="btn btn-danger">Hapus</a>
            </td>
        </tr>
    <% }) %>
    
</tbody>
</table>
<%- include ('../../partial/footer'); -%>